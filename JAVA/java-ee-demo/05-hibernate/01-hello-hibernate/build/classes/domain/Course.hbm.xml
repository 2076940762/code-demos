<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="domain.Course" table="t_cousrse">

		<id name="cid" column="cid">
			<generator class="native"></generator>
		</id>

		<property name="cname" column="cname"></property>

		<!-- 配置多对多 name 集合的名称 table 中间表的名称 -->
		<set name="students" table="elective_list"  cascade="save-update,delete">

			<!-- 当前对象在中间表的外键的名称 -->
			<key column="cid" />

			<!-- class 集合中存入对象，对象的全路径 column 集合中对象在中间表的外键的名称 -->
			<many-to-many column="sid" class="domain.Student" />
			
		</set>

	</class>


</hibernate-mapping>