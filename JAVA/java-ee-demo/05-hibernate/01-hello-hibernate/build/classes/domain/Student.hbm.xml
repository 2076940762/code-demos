<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="domain.Student" table="t_student">
		<id name="sid" column="sid">
			<generator class="native"></generator>
		</id>

		<property name="sname" column="sname"></property>

		<!-- 配置多对多 name 集合的名称 table 中间表的名称 -->
		<set name="courses" table="elective_list"  inverse="true"  cascade="save-update,delete">
		
			<!-- 当前对象在中间表的外键的名称 -->
			<key column="sid" />
			
			<!-- class 集合中存入对象，对象的全路径 column 集合中对象在中间表的外键的名称 -->
			<many-to-many class="domain.Course" column="cid" />
		</set>

	</class>
</hibernate-mapping>