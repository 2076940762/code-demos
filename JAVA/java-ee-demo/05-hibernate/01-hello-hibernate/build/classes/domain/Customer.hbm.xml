<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<!-- 表和类的映射 -->
	<class name="domain.Customer" table="cst_customer" lazy="true">

		<!-- 主键 -->
		<id name="cust_id" column="cust_id">
			<!-- 主键生成策略 native 不是auto -->
			<generator class="native"></generator>
		</id>

		<version name="version"></version>

		<!-- 其它属性 -->
		<property name="cust_name" column="cust_name"></property>
		<property name="cust_user_id" column="cust_user_id"></property>
		<property name="cust_create_id" column="cust_create_id"></property>
		<property name="cust_source" column="cust_source"></property>

		<property name="cust_industry" column="cust_industry"></property>
		<property name="cust_level" column="cust_level"></property>
		<property name="cust_linkman" column="cust_linkman"></property>
		<property name="cust_phone" column="cust_phone"></property>

		<property name="cust_mobile" column="cust_mobile"></property>

		<!-- 级联保存 cascade="save-update" ；放弃对外键的维护inverse="true" -->
		<set name="linkmans" inverse="false" cascade="save-update,delete"   fetch="subselect"  lazy="true" >
			<key column="lkm_cust_id"></key>
			<one-to-many class="domain.Linkman" />
		</set>

	</class>


</hibernate-mapping>